class Client:
    def __init__(self, name='', surname='', city='', money_balance=0):
        self.name = name
        self.surname = surname
        self.city = city
        self.balance = money_balance
    def datDict(self, cliendDict):
        self.name = cliendDict.get('name')
        self.surname = cliendDict.get('surname')
        self.city = cliendDict.get('city')
        self.balance = cliendDict.get('money_balance')
    def personData(self):   # Задание 21.9.4
        return f'{self.name} {self.surname}, г. {self.city}'

